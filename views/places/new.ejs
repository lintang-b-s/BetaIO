<% layout('layouts/boilerplate') %>



<div class="row">
    <h1 class="text-center">Tambah tempat baru</h1>
    <div class="col-6 offset-3">
        <form action="/places" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="place[title]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="place[location]" required>
            </div>

            <div>Pilih lokasi tempat</div>

                        <div id="map"></div>
            <pre id="coordinates" class="coordinates"></pre>

         

            <div clas="mb-3">
                <label for="typecoord">Tipe Koordinat (Point)</label>
                
                <select name="geometry[type]" id="typecoord">
                    <option value="">--Please choose an option--</option>
                    <option value='Point'>Point</option>
                  
              
                </select>

            </div>

            <div class="mb-3">
                <label class="form-label" for="coordinate">Coordinate (long, lat)</label>
                <input class="form-control" type="text" id="koor1" name="geometry[coordinates]" value="" required>
                <input class="form-control" type="text" id="koor2" name="geometry[coordinates]" value="" required>
            </div>
            
            <label class="form-label" for="image">klik ctrl+ pilih gambar untuk memilih lebih dari 2 gambar</label>
            <input type="file" name="image" id="" multiple>

            <!--<div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="place[image]" required>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="placeType">type</label>
                <input class="form-control" type="text" id="placeType" name="place[placeType]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="flora">flora</label>
                <input class="form-control" type="text" id="flora" name="place[flora]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="fauna">fauna</label>
                <input class="form-control" type="text" id="fauna" name="place[fauna]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="makanan">makanan</label>
                <input class="form-control" type="text" id="makanan" name="place[makanan]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="habitant">habitant</label>
                <input class="form-control" type="text" id="habitant" name="place[habitant]" required>
            </div>

            <div clas="mb-3">
                <label for="sumberAir">Apakah ada sumber air ?</label>
                
                <select name="place[sumberAir]" id="sumberAir">
                    <option value="">--Please choose an option--</option>
                    <option value='true'>Ada</option>
                    <option value='false'>Tidak ada</option>
              
                </select>

            </div>

            

           

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="place[description]" required></textarea>
            </div>
            

            <h4>Tambah Tiket</h4>
            
            <br> </br>
                <div clas="mb-3">
                    <label for="sumberAir">  Tipe Tiket </label>
                    
                    <select name="tickets[type]" id="sumberAir">
                        <option value="">--Please choose an option--</option>
                        <option value='digital'>Digital</option>
                        <option value='fisik'>Fisik</option>
                
                    </select>

                </div>

            <div class="mb-3">
                <label class="form-label" for="price">price</label>
                <input class="form-control" type="number" id="price" name="tickets[price]" required>
            </div>
        

            <div class="mb-3">
                <label class="form-label" for="stock">stock</label>
                <input class="form-control" type="number" id="stock" name="tickets[stock]" required>
            </div>

            <!-- placeholder="dd-mm-yyyy" value=""
            min="1997-01-01" max="2120-12-31" -->
            <div class="mb-3">
                <label class="form-label" for="expired">expired</label>
                <input class="form-control" type="date" id="expired"  name="tickets[expired]"   value=""
                min="1997-01-01" max="2120-12-31"  required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="startDate">tanggal check in</label>
                <input class="form-control" type="date" id="startDate" name="tickets[startDate]" required>
            </div>


            <div class="mb-3">
                <label class="form-label" for="endDate">tanggal check out</label>
                <input class="form-control" type="date" id="endDate" name="tickets[endDate]" required>
            </div>

           
            



            <div class="mb-3">
                <button class="btn btn-danger">Add place</button>
            </div>
            
        </form>


        <!-- <form action="/places/tickets" method="POST" novalidate class="needs-validation" >

           

        </form> -->



        <a href="/places">All places</a>

    </div>
</div>

