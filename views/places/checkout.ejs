<% layout('layouts/boilerplate') %> 
    <form action="/places/<%= place._id %>/postcheckout" method="POST" novalidate class="needs-validation container form-semina" >
   
        <div className='personal-details'>
          <div className='row row-cols-lg-8 row-cols-md-2 row-cols-1 justify-content-lg-center'>
            <div className='form-title col-lg-8'>
              <span>01</span>
              <div>Personal Details</div>
            </div>
          </div>
          <div className='row row-cols-lg-8 row-cols-md-2 row-cols-1 justify-content-center'>
            <div className='mb-4 col-lg-4'>
              <label htmlFor='first_name' className='form-label'>
                First Name
              </label>
              <input
                type='text'
                placeholder='First name here'
                className='form-control'
                id='first_name'
                name='personalDetail[firstName]'
              
              />
            </div>
  
            <div className='mb-4 col-lg-4'>
              <label htmlFor='last_name' className='form-label'>
                Last Name
              </label>
              <input
                type='text'
                placeholder='Last name here'
                className='form-control'
                name='personalDetail[lastName]'
                id='last_name'
               
              />
            </div>
          </div>
          <div className='row row-cols-lg-8 row-cols-md-2 row-cols-12 justify-content-center'>
            <div className='mb-4 col-lg-4'>
              <label htmlFor='email_address' className='form-label'>
                Email
              </label>
              <input
                type='email'
                className='form-control'
                id='email_address'
                placeholder='semina@bwa.com'
                name='personalDetail[email]'
                
              />
            </div>
  
            <div className='mb-4 col-lg-4'>
              <label htmlFor='exampleFormControlInput1' className='form-label'>
                Role
              </label>
              <input
                type='text'
                className='form-control'
                id='role'
                placeholder='Product Designer'
                name='personalDetail[role]'
              />
            </div>
          </div>
        </div>

        <!-- payment -->
        <div className='row row-cols-lg-8 row-cols-md-2 row-cols-1 justify-content-center gy-4 gy-md-0'>
          <% payments.map((payment, i) => {%>
            <div className='col-lg-4' key=<%= payment._id %>>
              <label className='payment-radio h-100 d-flex justify-content-between align-items-center'>
                <div className='d-flex align-items-center gap-4'>
                 
                  <div><%= payment.type%></div>
                </div>
                <input
                  type='radio'
                  checked='false'
                  name='payment'
                  value=<%= payment._id %>
               
                />
                <span className='checkmark'></span>
              </label>
            </div>
         <% }) %>
        </div>

        <div className='mb-4 col-lg-4'>
          <label htmlFor='exampleFormControlInput1' className='form-label'>
            ticket Type
          </label>
          <input
            type='text'
            className='form-control'
            id='ticketType'
            readonly="readonly"
            value=<%= place.tickets[0].type %>
            placeholder=<%= place.tickets[0].type %>
            name='tickets[0][ticketCategories][type]'
          />
        </div>


        <div className='mb-4 col-lg-4'>
          <label htmlFor='exampleFormControlInput1' className='form-label'>
            ticket Price
          </label>
          <input
            type='text'
            className='form-control'
            id='ticketPrice'
            readonly="readonly"
            value=<%= place.tickets[0].price %>
            placeholder=<%= place.tickets[0].price %>
            name='tickets[0][ticketCategories][price]'
          />
        </div>


        <div className='mb-4 col-lg-4'>
          <label htmlFor='exampleFormControlInput1' className='form-label'>
            ticket  Id
          </label>
          <input
            type='text'
            className='form-control'
            id='ticketId'
            readonly="readonly"
            value=<%= place.tickets[0]._id %>
            placeholder=<%= place.tickets[0]._id %>
            name='tickets[0][ticketCategories][ticketId]'
          />
        </div>


        <div className='mb-4 col-lg-4'>
          <label htmlFor='exampleFormControlInput1' className='form-label'>
            ticket check in
          </label>
          <input
            type='date'
            className='form-control'
            id='ticketCheckIn'
            readonly="readonly"
            value=<%= place.tickets[0].startDate.toISOString().split('T')[0] %>
            placeholder=<%= place.tickets[0].startDate.toISOString().split('T')[0] %>
            name='tickets[0][ticketCategories][startDate]'
          />
        </div>

        <div className='mb-4 col-lg-4'>
          <label htmlFor='exampleFormControlInput1' className='form-label'>
            ticket check out
          </label>
          <input
            type='date'
            className='form-control'
            id='ticketCheckOut'
            readonly="readonly"
            value=<%= place.tickets[0].endDate.toISOString().split('T')[0] %>
            placeholder=<%= place.tickets[0].endDate.toISOString().split('T')[0] %>
            name='tickets[0][ticketCategories][endDate]'
          />
        </div>
      

        <div className='mb-4 col-lg-4'>
          <label htmlFor='exampleFormControlInput1' className='form-label'>
            sum Ticket
          </label>
          <input
            type='number'
            className='form-control'
            id='ticketCheckOut'
            readonly="readonly"
            value=1
            placeholder=1
            name='tickets[0][sumTicket]'
          />
        </div>
      
      



  
        <div className='d-flex flex-column align-items-center footer-payment gap-4'>
          <button variant='btn-green' >
            Pay Now
          </button>
          <div>
            <img src='/icons/ic-secure.svg' alt='' />
            <span>Your payment is secure and encrypted</span>
          </div>
        </div>
      </form>
    <script>
         const place = <%- JSON.stringify(place) %>
         const payments = <%- JSON.stringify(payments) %>
    </script>
